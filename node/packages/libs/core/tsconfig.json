{
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  }
}
